# ============================================
# BaseWill Environment Configuration
# ============================================
# Copy this file to .env and fill in the values

# ============================================
# Network Configuration
# ============================================

# Private key for deployment (DO NOT COMMIT!)
PRIVATE_KEY=0x...

# RPC URLs
BASE_RPC_URL=https://mainnet.base.org
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# BaseScan API key for contract verification
BASESCAN_API_KEY=

# Enable forking for local testing
FORKING=false

# ============================================
# Deployment Configuration
# ============================================

# Commission wallets (comma-separated, these receive platform fees)
COMMISSION_WALLETS=0xWallet1,0xWallet2

# Notary Registry Configuration
MINIMUM_NOTARY_STAKE=0.1  # ETH required to become a notary
WITHDRAWAL_COOLDOWN=604800  # 7 days in seconds

# Fee Configuration (in basis points, 100 = 1%)
PLATFORM_FEE_BPS=100  # 1% platform fee
NOTARY_REWARD_BPS=50  # 0.5% notary reward
EXECUTOR_REWARD_BPS=10  # 0.1% executor reward

# ============================================
# Contract Addresses (Post-Deployment)
# ============================================

# Fill these after deployment
NOTARY_REGISTRY_ADDRESS=
BASEWILL_ADDRESS=

# ============================================
# Testing & Development
# ============================================

# Enable gas reporting
REPORT_GAS=false

# CoinMarketCap API for gas cost estimates
COINMARKETCAP_API_KEY=

# ============================================
# Frontend Configuration (for Vite)
# ============================================

VITE_BASE_RPC_URL=https://mainnet.base.org
VITE_BASE_CHAIN_ID=8453
VITE_BASE_EXPLORER=https://basescan.org

# Contract addresses for frontend
VITE_NOTARY_REGISTRY_ADDRESS=
VITE_BASEWILL_ADDRESS=

# IPFS Configuration
VITE_IPFS_GATEWAY=https://ipfs.io/ipfs/
VITE_WEB3_STORAGE_TOKEN=

# Optional Backend API
VITE_BACKEND_API=

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_NOTIFICATIONS=true

# ============================================
# Backend Configuration
# ============================================

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/basewill

# Redis
REDIS_URL=redis://localhost:6379

# Email (SendGrid)
SENDGRID_API_KEY=
EMAIL_FROM=noreply@basewill.xyz

# Push Notifications
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=

# ============================================
# Keeper Bot Configuration
# ============================================

# Keeper wallet (separate from deployer for security)
KEEPER_PRIVATE_KEY=

# Minimum profit threshold (in ETH)
KEEPER_MIN_PROFIT=0.001

# Gas price limits (in gwei)
KEEPER_MAX_GAS_PRICE=50
