# BaseWill Backend Environment Variables

# Server
PORT=3001
NODE_ENV=development
LOG_LEVEL=info
CORS_ORIGIN=http://localhost:5173

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/basewill?schema=public

# Redis (for caching and job queues)
REDIS_URL=redis://localhost:6379

# Blockchain
BASE_RPC_URL=https://mainnet.base.org
BASEWILL_CONTRACT_ADDRESS=
NOTARY_REGISTRY_ADDRESS=
CONTRACT_DEPLOYMENT_BLOCK=

# Feature Flags
ENABLE_INDEXER=true
ENABLE_CRON=true

# Email (SendGrid or SMTP)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key
EMAIL_FROM=BaseWill <noreply@basewill.xyz>

# Web Push Notifications
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:support@basewill.xyz

# Keeper Integration
KEEPER_WEBHOOK_URL=http://localhost:3002/webhook

# Frontend URL (for email links)
FRONTEND_URL=https://basewill.xyz
